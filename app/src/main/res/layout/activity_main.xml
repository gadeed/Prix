<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/navigation_bar"
        android:layout_gravity="right"/>

    <LinearLayout
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="81dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/button_prix"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_prix"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_prix"
                android:layout_marginTop="14dp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/button_network"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_airtime"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_airtime"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/button_data_bundles"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_data"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_data_bundles"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/button_electricity"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_electricity"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/button_payment"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_payments"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_payments"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/button_remit"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_remit"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_remit_money"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#172B4D">

        <ImageView
            android:id="@+id/button_profile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user"
            android:padding="16dp"
            app:tint="#7A7A7A" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dashboard"
            android:padding="16dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/button_setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:padding="16dp"
            app:tint="#7A7A7A" />

    </LinearLayout>

</LinearLayout>