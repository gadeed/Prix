<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    tools:context=".activity.PasswordActivity">

    <RelativeLayout
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:textSize="14dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_navigation_bar"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pagination_four"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:textSize="22dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#175E8C"
        android:layout_marginTop="64dp"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:text="Set your PIN"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:textColor="#7A7A7A"
        android:layout_width="296dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Set your password with maximum 8 characters with at least 1 capital letter, 1 number and 1 symbol." />

    <TextView
        android:layout_gravity="center_horizontal"
        android:textSize="12dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="#175E8C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Define password:" />

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/input_password"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="6"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        app:pinLineStroke="2dp"
        app:pinLineStrokeSelected="4dp" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:textSize="12dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="#175E8C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password:" />

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/confirm_password"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="6"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        app:pinLineStroke="2dp"
        app:pinLineStrokeSelected="4dp" />

    <RelativeLayout
        android:id="@+id/button_next"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/next_button" />

</LinearLayout>