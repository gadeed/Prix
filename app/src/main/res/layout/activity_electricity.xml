<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ElectricityActivity">

        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/button_back"
                android:padding="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow" />

            <ImageView
                android:padding="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_pinless_header" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="27dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R0"
                android:textSize="34dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#175E8C"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_more_button"
                android:layout_alignParentRight="true"
                android:layout_marginRight="49dp"/>

        </RelativeLayout>

        <TextView
            android:fontFamily="@font/montserrat_regular"
            android:textSize="15dp"
            android:textColor="#175E8C"
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current balance" />

        <TextView
            android:layout_marginTop="48dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="15dp"
            android:textColor="#175E8C"
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Meter Number" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_group_meter" />

            <EditText
                android:textColorHint="#175E8C"
                android:layout_margin="16dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="#175E8C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="41324954043"
                android:background="@color/white" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:background="#16110D"
            android:layout_marginTop="8dp" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:layout_marginTop="44dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="32dp"
            android:id="@+id/cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_flexGrow="1"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_selectedBackgroundColor="#175E8C"
                app:toggle_padding="8dp"
                app:toggle_textColor="#172B4D"
                app:toggle_text="R50"
                app:toggle_fontFamily="/fonts/montserrat_bold.ttf"
                app:toggle_textSize="18dp"
                app:toggle_textGravity="center" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_flexGrow="1"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_selectedBackgroundColor="#175E8C"
                app:toggle_padding="8dp"
                app:toggle_textColor="#172B4D"
                app:toggle_text="R100"
                app:toggle_fontFamily="/fonts/montserrat_bold.ttf"
                app:toggle_textSize="18dp"
                app:toggle_textGravity="center" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_flexGrow="1"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_selectedBackgroundColor="#175E8C"
                app:toggle_padding="8dp"
                app:toggle_textColor="#172B4D"
                app:toggle_text="R150"
                app:toggle_fontFamily="/fonts/montserrat_bold.ttf"
                app:toggle_textSize="18dp"
                app:toggle_textGravity="center" />

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:layout_marginTop="15dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_flexGrow="1"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_selectedBackgroundColor="#175E8C"
                app:toggle_padding="8dp"
                app:toggle_textColor="#172B4D"
                app:toggle_text="R200"
                app:toggle_fontFamily="/fonts/montserrat_bold.ttf"
                app:toggle_textSize="18dp"
                app:toggle_textGravity="center" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_flexGrow="1"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_selectedBackgroundColor="#175E8C"
                app:toggle_padding="8dp"
                app:toggle_textColor="#172B4D"
                app:toggle_text="R250"
                app:toggle_fontFamily="/fonts/montserrat_bold.ttf"
                app:toggle_textSize="18dp"
                app:toggle_textGravity="center" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_flexGrow="1"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_selectedBackgroundColor="#175E8C"
                app:toggle_padding="8dp"
                app:toggle_textColor="#172B4D"
                app:toggle_text="R300"
                app:toggle_fontFamily="/fonts/montserrat_bold.ttf"
                app:toggle_textSize="18dp"
                app:toggle_textGravity="center" />

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:layout_marginTop="15dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_flexGrow="1"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_selectedBackgroundColor="#175E8C"
                app:toggle_padding="8dp"
                app:toggle_textColor="#172B4D"
                app:toggle_text="R350"
                app:toggle_fontFamily="/fonts/montserrat_bold.ttf"
                app:toggle_textSize="18dp"
                app:toggle_textGravity="center" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_flexGrow="1"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_selectedBackgroundColor="#175E8C"
                app:toggle_padding="8dp"
                app:toggle_textColor="#172B4D"
                app:toggle_text="R400"
                app:toggle_fontFamily="/fonts/montserrat_bold.ttf"
                app:toggle_textSize="18dp"
                app:toggle_textGravity="center" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_flexGrow="1"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_selectedBackgroundColor="#175E8C"
                app:toggle_padding="8dp"
                app:toggle_textColor="#172B4D"
                app:toggle_text="R450"
                app:toggle_fontFamily="/fonts/montserrat_bold.ttf"
                app:toggle_textSize="18dp"
                app:toggle_textGravity="center" />

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

        <RelativeLayout
            android:layout_marginTop="34dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:layout_centerInParent="true" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>