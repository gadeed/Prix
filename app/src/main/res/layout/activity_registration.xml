<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegistrationActivity">

    <RelativeLayout
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:textSize="14dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_navigation_bar"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pagination"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:textSize="22dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#175E8C"
        android:layout_marginTop="114dp"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:text="We are about to start your registration..."
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:textColor="#7A7A7A"
        android:layout_width="278dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Select your preferred language and specify if you are a new user or have been registered before." />

    <TextView
        android:textSize="12dp"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="37dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="#175E8C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_icon" />

        <TextView
            android:padding="8dp"
            android:textColor="#175E8C"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="English" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="36dp"
        android:background="#175E8C"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/button_next"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/next_button" />

</LinearLayout>