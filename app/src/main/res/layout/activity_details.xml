<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="16dp"
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="#175E8C" />

            <TextView
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigation_bar"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="33dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pagination_three"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_marginTop="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="246dp"
            android:layout_height="63dp"
            android:src="@drawable/logo" />

        <TextView
            android:textSize="22dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#175E8C"
            android:layout_marginTop="55dp"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:text="Personal information"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_phone" />

            <EditText
                android:id="@+id/phone_number"
                android:inputType="phone"
                android:textColorHint="#175E8C"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:textColor="#175E8C"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_name" />

            <EditText
                android:id="@+id/input_name"
                android:inputType="textCapWords|textAutoComplete|textAutoCorrect"
                android:textColorHint="#175E8C"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:textColor="#175E8C"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter name"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_name" />

            <EditText
                android:id="@+id/input_surname"
                android:inputType="textCapWords|textAutoComplete|textAutoCorrect"
                android:textColorHint="#175E8C"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:textColor="#175E8C"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter last name"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/button_next"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/next_button" />

    </LinearLayout>

</ScrollView>