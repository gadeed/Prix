<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PaymentActivity">

    <ImageView
        android:id="@+id/button_back"
        android:padding="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remit_header" />

    <LinearLayout
        android:layout_marginTop="169dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_margin="35dp"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_group_mama_money">


        </LinearLayout>

        <LinearLayout
            android:layout_margin="35dp"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_group_ecocash">

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_group_paisa">

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_group_remit_money">

        </LinearLayout>


    </LinearLayout>



</LinearLayout>