<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.PrixActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:padding="14dp"
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow" />

        <ImageView
            android:id="@+id/title"
            android:layout_width="182dp"
            android:layout_height="20dp"
            android:src="@drawable/sell_airtime_header"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R0"
            android:textSize="34dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#175E8C"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="49dp"/>

    </RelativeLayout>

    <TextView
        android:fontFamily="@font/montserrat_regular"
        android:textSize="15dp"
        android:textColor="#175E8C"
        android:layout_marginLeft="27dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current balance" />

    <TextView
        android:id="@+id/select_network"
        android:layout_marginTop="32dp"
        android:textSize="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#175E8C"
        android:fontFamily="@font/montserrat_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Network" />

    <LinearLayout
        android:id="@+id/network_container"
        android:background="@drawable/background_outline"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/network_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vodacom"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/network_title"
            android:textSize="22dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Vodacom"
            android:textColor="#175E8C"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_margin="16dp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/drop_down"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_vodacom">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_vodacom" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_cellc">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_cellc" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_telkom">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_telkom" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_buy"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>