<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main_layout"
        tools:context=".activity.SignupActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/button_back"
                android:padding="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration" />

            <ImageView
                android:padding="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigation_bar"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:src="@drawable/ic_pagination__one"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:textSize="22dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#175E8C"
            android:layout_marginTop="48dp"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:text="Please enter your mobile phone &amp; email"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:textColor="#7A7A7A"
            android:layout_width="293dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="We'll use your mobile phone and e-mail to send you the activation code for this application" />

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="37dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email address" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_email" />

            <EditText
                android:id="@+id/input_email"
                android:inputType="textEmailAddress"
                android:textColorHint="#175E8C"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:textColor="#175E8C"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter your email"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="36dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="37dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic___icon___l" />

            <EditText
                android:id="@+id/input_password"
                android:inputType="textPassword|textAutoCorrect|textAutoComplete"
                android:textColorHint="#175E8C"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:textColor="#175E8C"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="36dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="37dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-Enter Password" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic___icon___l" />

            <EditText
                android:id="@+id/re_enter_password"
                android:inputType="textPassword|textAutoComplete|textAutoCorrect"
                android:textColorHint="#175E8C"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:textColor="#175E8C"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Re-Enter Password"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="36dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:buttonTint="#175E8C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#175E8C"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I accept" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_amp_conditions"
                android:textSize="15dp"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/montserrat_semi_bold" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_next"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/next_button" />

    </LinearLayout>
</ScrollView>