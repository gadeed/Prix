<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    tools:context=".activity.CodeActivity">

    <RelativeLayout
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:textSize="14dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_navigation_bar"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pagination_two"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:textSize="22dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#175E8C"
        android:layout_marginTop="64dp"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:text="Confirmation code has been sent to your mobile and e-mail"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:textColor="#7A7A7A"
        android:layout_width="301dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="The code has been sent to +27631234567 and second portion to yourmail@gmail.com. \nPlease enter the code below." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/input_code"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="6"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        app:pinLineStroke="2dp"
        app:pinLineStrokeSelected="4dp" />

    <TextView
        android:textColor="#175E8C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend code again"
        android:fontFamily="@font/montserrat_bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/next_button"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"/>

    <RelativeLayout
        android:visibility="gone"
        android:background="#175E8C"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait..."
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16dp"
            android:padding="16dp"
            android:textColor="@color/white"/>

        <ProgressBar
            android:progressBackgroundTint="@color/white"
            android:secondaryProgressTint="@color/white"
            android:progressTint="@color/white"
            android:padding="16dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/progress_bar"
            android:indeterminate="true" />

    </RelativeLayout>

</LinearLayout>