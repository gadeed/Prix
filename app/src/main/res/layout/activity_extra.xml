<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ExtraActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:padding="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merchant number" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_merchant" />

            <TextView
                android:id="@+id/phone_number"
                android:inputType="phone"
                android:textColorHint="#175E8C"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:textColor="#175E8C"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="27 63 123 4567"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_remit_money" />

            <TextView
                android:id="@+id/input_amount"
                android:inputType="phone"
                android:textColorHint="#175E8C"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:textColor="#175E8C"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Enter amount"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reference" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_phone" />

            <TextView
                android:id="@+id/input_reference"
                android:inputType="phone"
                android:textColorHint="#175E8C"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:textColor="#175E8C"
                android:textSize="17dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Enter reference"
                android:background="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_bold"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title" />

        <EditText
            android:inputType="textCapWords|textAutoCorrect|textAutoComplete"
            android:textColorHint="#175E8C"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:padding="8dp"
            android:textColor="#175E8C"
            android:textSize="17dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter title"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body" />

        <EditText
            android:inputType="textMultiLine|textAutoComplete|textCapSentences|textAutoCorrect"
            android:maxLines="10"
            android:textColorHint="#175E8C"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:padding="8dp"
            android:textColor="#175E8C"
            android:textSize="17dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter body"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_semi_bold" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>