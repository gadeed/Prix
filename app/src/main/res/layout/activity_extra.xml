<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ExtraActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:padding="16dp" />

    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title" />

        <EditText
            android:inputType="textCapWords|textAutoCorrect|textAutoComplete"
            android:textColorHint="#175E8C"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:padding="8dp"
            android:textColor="#175E8C"
            android:textSize="17dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter title"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <TextView
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body" />

        <EditText
            android:inputType="textMultiLine|textAutoComplete|textCapSentences|textAutoCorrect"
            android:maxLines="10"
            android:textColorHint="#175E8C"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:padding="8dp"
            android:textColor="#175E8C"
            android:textSize="17dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter body"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:background="#16110D"
            android:layout_marginTop="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bg"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_semi_bold" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_qr_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shop_name"
            android:textSize="22dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#175E8C"
            android:layout_marginTop="55dp"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/qr_code" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:text="SHOP CODE:"
            android:textSize="17dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="#175E8C"
            android:layout_marginTop="16dp"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/shop_code"
            android:textSize="22dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#175E8C"
            android:layout_marginTop="16dp"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</LinearLayout>